<?xml version="1.0"?>
<config>
    <modules>
        <Hand_Support>
            <version>0.1.1</version>
        </Hand_Support>
    </modules>
    <frontend>
        <routers>
            <support>
                <use>standard</use>
                <args>
                    <module>Hand_Support</module>
                    <frontName>support</frontName>
                </args>
            </support>
        </routers>
        <layout>
            <updates>
                <support>
                    <file>support.xml</file>
                </support>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<support>
				<use>admin</use>
				<args>
					<module>Hand_Support</module>
					<frontName>support</frontName>
				</args>
			</support>
        </routers>
    </admin>
    <global>
        <models>
            <support>
                <class>Hand_Support_Model</class>
                <resourceModel>support_mysql4</resourceModel>
            </support>
            <support_mysql4>
                <class>Hand_Support_Model_Mysql4</class>
                <entities>
                    <support>
                        <table>support</table>
                    </support>
                </entities>
            </support_mysql4>
        </models>
        <resources>
            <support_setup>
                <setup>
                    <module>Hand_Support</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </support_setup>
            <support_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </support_write>
            <support_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </support_read>
        </resources>
        <blocks>
            <support>
                <class>Hand_Support_Block</class>
            </support>
        </blocks>
        <helpers>
            <support>
                <class>Hand_Support_Helper</class>
            </support>
        </helpers>
    </global>
</config>